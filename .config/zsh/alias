alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias utc="date -u '+%Y.%m.%dT%H:%M'"

alias net_inf="scutil --nwi"
alias net_int="sudo tcpdump --list-interfaces"
alias net_cap="sudo tcpdump -en" # doesn't trigger dns lookups

alias grep="grep --color=auto"
alias cp="cp -i"
alias mv="mv -i"
alias la="ls -al --color"
alias ls="ls --color"
alias xx="&& exit"

alias v="yazi"
alias e="hx"
alias fzf="fzf --preview='cat {}'"
alias exr="exercism"
alias ai="ollama run deepseek-r1:8b"
alias glow="glow --style dracula -p"
alias lg="lazygit"
alias yt-down="yt-dlp -f \"bestvideo[height=720]+bestaudio\" --merge-output-format mp4"
alias r5rs="racket -l r5rs"
alias dracket="racket -l errortrace -t"
alias etyp='f() { typst watch "$1" & disown; open -g "${1%.typ}.pdf" & hx "$1"; }; f'

